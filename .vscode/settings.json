{
    "editor.formatOnSave": true,
    "tslint.autoFixOnSave": true,
    "[typescript]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80,
        "files.trimTrailingWhitespace": true
    },
    "markdownlint.config": {
        "MD033": {
            "allowed_elements": [
                "img"
            ]
        }
    },
    "cSpell.words": [
        "Cygwin",
        "Git's",
        "Hamano",
        "ISMTP",
        "Junio",
        "Probot",
        "Schindelin",
        "Truthy",
        "VSTS",
        "amlog",
        "basedon",
        "busybox",
        "coverageprocessor",
        "dstolee",
        "dugite",
        "gitgitgadget",
        "gitster",
        "gmail",
        "gmane",
        "googlegroups",
        "latesttag",
        "latesttags",
        "maildir",
        "mailsplit",
        "maint",
        "mbox",
        "octokit",
        "onelines",
        "pobox",
        "promisify",
        "publishtoremote",
        "rebased",
        "refname",
        "repo",
        "smee",
        "smtp",
        "stolee",
        "superset",
        "taggerdate",
        "tbdiff",
        "vger",
        "worktree"
    ],
    "cSpell.language": "en-US",
    "cSpell.enabledLanguageIds": [
        "git-commit",
        "html",
        "javascript",
        "json",
        "markdown",
        "plaintext",
        "typescript"
    ],
    "cSpell.ignorePaths": [
        "node_modules",
        "**/node_modules"
    ]
}
